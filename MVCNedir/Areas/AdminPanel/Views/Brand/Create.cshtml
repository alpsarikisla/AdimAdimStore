@model MVCNedir.Models.Brand

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutPage1.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Marka Ekle</h1>
</div>
<div class="card">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Isim, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Isim, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Isim, "", new { @class = "text-danger" })
            </div>

            <div class="mt-3">
                <input type="submit" value="Marka Ekle" class="btn btn-primary" />
            </div>
        }
    </div>
    <div class="card-footer">
        <a href="@Url.Action("Index","Category")">Kategori Listesine Dön</a>
    </div>
</div>

