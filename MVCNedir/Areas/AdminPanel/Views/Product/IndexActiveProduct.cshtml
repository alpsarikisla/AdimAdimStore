@model IEnumerable<MVCNedir.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutPage1.cshtml";
}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Kategori Listesi</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("Create","Product")" class="btn btn-outline-primary">Ürün Ekle +</a>
    </div>
</div>


<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>ID</th>
            <th>Resim</th>
            <th>İsim</th>
            <th class="d-none d-md-table-cell ">Marka</th>
            <th class="d-none d-md-table-cell ">Kategori</th>
            <th class="d-none d-md-table-cell ">Stok</th>
            <th class="d-none d-md-table-cell ">Fiyat</th>
            <th class="d-none d-md-table-cell ">Satış Durum</th>
            <th>Seçenek</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">@item.ID</td>
                <td>
                    <img src="~/ProductImages/@item.ImagePath" class="img-thumbnail img-fluid" width="56" />
                </td>
                <td class="align-middle">@item.Name</td>
                <td class="align-middle">@item.Category.Isim</td>
                <td class="align-middle">@item.Brand.Isim</td>
                <td class="align-middle">@item.Stock</td>
                <td class="align-middle">@item.Price</td>
                <td class="align-middle">
                    @if (item.SellStatus)
                    {
                        <label>Satışta</label>
                    }
                    else
                    {
                        <label>Satış dışı</label>
                    }
                </td>
                <td class="align-middle">
                    <a href="@Url.Action("Edit","Product", new { id = item.ID})" class="btn btn-success btn-sm"><i class="bi bi-pencil-square"></i></a>
                    <a href="@Url.Action("Delete","Product", new { id = item.ID})" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

